# 应用配置
ENV=development
APP_NAME=wecom
APP_VERSION=0.1.0
DEBUG=true

# 服务器配置
HOST=127.0.0.1
PORT=8000
WORKERS=4

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery 配置
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Postgres 数据库配置
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=wecom
POSTGRES_USER=wecom_prod_user
POSTGRES_PASSWORD=StrongPassword123!

# 数据库连接池配置
POOL_SIZE=10
MAX_OVERFLOW=5
POOL_RECYCLE=1800
POOL_PRE_PING=True
POOL_TIMEOUT=30
ECHO_POOL=FALSE

# 安全配置
SECRET_KEY=your-secret-key
SECRET_KEY_EXPIRE_MINUTES=1440